{minimum_otp_vsn, "27"}.

{deps, [
    {poolboy, "1.5.2"},
    {jsx, "3.1.0"}  % Temporary - will migrate to OTP 27 native json
]}.

{erl_opts, [
    debug_info,
    warn_unused_vars,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars,
    warn_export_all,
    warnings_as_errors
]}.

{profiles, [
    {dev, [
        {erl_opts, [
            debug_info,
            nowarn_export_all
        ]}
    ]},
    
    {test, [
        {deps, [
            {proper, "1.4.0"}
        ]},
        {erl_opts, [
            debug_info,
            nowarn_export_all
        ]}
    ]},
    
    {prod, [
        {erl_opts, [
            warnings_as_errors,
            inline_list_funcs,
            warn_unused_vars,
            warn_shadow_vars,
            warn_unused_import,
            {warn_format, 1}
        ]}
    ]}
]}.

{dialyzer, [
    {warnings, [
        unknown,
        no_return,
        error_handling,
        missing_return,
        extra_return
    ]},
    {get_warnings, true},
    {plt_apps, top_level_deps},
    {plt_extra_apps, [common_test, eunit, syntax_tools, compiler]},
    {plt_location, local},
    {base_plt_apps, [stdlib, kernel, erts, sasl, inets, ssl, crypto, public_key]},
    {base_plt_location, global}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    exports_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{cover_enabled, true}.
{cover_opts, [verbose]}. 